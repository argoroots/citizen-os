extends /_templates/blocks.pug


append stylus
    :stylus
        #start
            .btn-primary
                padding 11px 30px
                color #D07FB4
                background #FFFFFF

                &:hover
                    color #D07FB4
                    box-shadow 0 2px 10px 0 rgba(255, 255, 255, 0.6)

        #founding
            .deadline
                padding 11px 30px
                line-height 18px
                border-radius 20px
                color #252525
                background #FFC600

            .btn-primary
                margin-top 3rem !important
                padding 1rem 60px
                border-radius 25px

        .hacktivist-block
            height 160px
            width 160px
            line-height 160px
            border-radius 50%

        .hacktivist-sign
            font-size 60px
            line-height 160px

append content
    if self.blocks.hacktivist && self.blocks.hacktivist.blocks
        - var blocks = self.blocks.hacktivist.blocks
        #hacktivist-blocks.d-none
            .row.mt-5
                .col-12.col-md-3.ml-auto.px-md-0
                    .hacktivist-block.text-center.mx-auto.mb-3(style={ background: blocks.activist.background })
                        strong= blocks.activist.title
                    +markdown(blocks.activist.text)
                .col-12.col-md-1.text-center.hacktivist-sign +
                .col-12.col-md-3.px-md-0
                    .hacktivist-block.text-center.mx-auto.mb-3(style={ background: blocks.hacker.background })
                        strong= blocks.hacker.title
                    +markdown(blocks.hacker.text)
                .col-12.col-md-1.text-center.hacktivist-sign =
                .col-12.col-md-3.mr-auto.px-md-0
                    .hacktivist-block.text-center.mx-auto.mb-3(style={ background: blocks.hacktivist.background })
                        strong= blocks.hacktivist.title
                    +markdown(blocks.hacktivist.text)

    if self.blocks.chat && self.blocks.chat.blocks
        #chat-blocks.d-none
            .row.mt-5
                each b in self.blocks.chat.blocks
                    .col-12.col-sm-4.text-center
                        a.d-block.mb-4(href=b.url)
                            img.mb-2(src=b.icon)
                            br
                            = b.title


append script
    script.
        $(function () {
            $('#hactivist-community-2 .block-text').addClass('p-5')
            $('#hactivist-community-2 .block-text h2').addClass('mb-4')
            $('#hactivist-community-2 .block-text').addClass('bg-white')
            $('#hactivist-community-2 .block-text').addClass('offset-sm-1')
            $('#hactivist-community-2 .block-text').addClass('box-shadow')

            $('#hacktivist .block-text').removeClass('col-sm-8')
            $('#hacktivist .block-text').addClass('col-sm-10')
            $('#hacktivist .block-text').addClass('col-md-8')
            $('#hacktivist .block-text').addClass('offset-md-2')
            $('#hacktivist .block-text').addClass('offset-sm-1')
            $('#hacktivist .block-text').removeClass('offset-sm-2')

            $('#hacktivist .block-text').append($('#hacktivist-blocks').html())
            $('#hacktivist-blocks').remove()

            $('#chat .block-text').append($('#chat-blocks').html())
            $('#chat-blocks').remove()
        })
