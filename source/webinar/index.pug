extends /_templates/main.pug


append stylus
    :stylus
        #header
            min-height 500px
            background-repeat no-repeat
            background-position center top
            background-size cover
            background-image url('/assets/images/webinar-header.png')

            h1
                color #FFFFFF
                font-size 46px
                font-weight bold
                line-height 64px
                text-align center
        #text
            background-color #FFFFFF

        #join
            border-radius 6px
            background-color #F7F7F7

            h2
                font-size 22px

        #footer
            min-height 150px
            background #F7F7F7
            font-size 14px

        #mce-EMAIL
            outline none

        #mc_embed_signup #mc-embedded-subscribe-form div.mce_inline_error
            margin-bottom 0px !important
            padding-left 0px !important

        @media only screen and (max-width: 576px)
            #header
                h1
                    font-size 32px
                    line-height 40px

block body
    .container-fluid
        #header.row.py-5
            .col-12.text-center
                a.navbar-brand(href=self.rootUrl)
                    img.mb-3(src='/assets/images/citizenos-logo-negative.png', height=50, width=270, alt='Citizen OS logo')
            .col-12.col-lg-8.offset-lg-2.text-center
                if self.blocks && self.blocks.header
                    h1= self.blocks.header.title
        #text.row.py-5
            .block.col-12.col-lg-6.offset-lg-1
                if self.blocks && self.blocks.text
                    +markdown(self.blocks.text.text)
            .block.col-12.col-lg-3.offset-lg-1
                #join.p-4
                    if self.blocks && self.blocks.join
                        h2= self.blocks.join.title
                        .row.my-2
                            .col-1
                                img(src='/assets/images/webinar-calendar.svg', height=22, width=20, alt='Citizen OS logo')
                            .col-auto= self.blocks.join.date
                        .row.my-2
                            .col-1
                                img(src='/assets/images/webinar-clock.svg', height=22, width=20, alt='Citizen OS logo')
                            .col-auto= self.blocks.join.time
                        h2.mt-4= self.blocks.join.how
                        a.btn.btn-primary.my-2.w-100(href='', data-toggle='modal', data-target='#join-popup')= self.blocks.join.button.title

        #footer.row.py-5
            .col-12.text-center
                a.navbar-brand(href=self.rootUrl)
                    img.mb-2(src='/assets/images/citizenos-logo.png', height=37, width=201, alt='Citizen OS logo')
                if self.blocks && self.blocks.footer
                    +markdown(self.blocks.footer.text)

    #join-popup.modal.fade(tabindex='-1', role='dialog')
        .modal-dialog.modal-dialog-centered.modal-lg(role='document')
            if self.blocks && self.blocks.form
                #mc_embed_signup
                    form#mc-embedded-subscribe-form.validate(action='https://citizenos.us19.list-manage.com/subscribe/post?u=ab576406496d96d9a8387879f&id=0804e75bba', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
                        .modal-content
                            #mc_embed_signup_scroll
                                .modal-header
                                    h5.mb-0= self.blocks.form.title
                                .modal-body
                                    .mc-field-group.w-100.mr-0
                                        label(for='mce-EMAIL')
                                            = self.blocks.form.email
                                            span.asterisk *
                                        input#mce-EMAIL.required.email.w-100(type='email', value='', name='EMAIL')
                                    #mce-responses.clear
                                        #mce-error-response.response(style='display:none')
                                        #mce-success-response.response(style='display:none')
                                    div(style='position: absolute; left: -5000px;', aria-hidden='true')
                                        input(type='text', name='b_ab576406496d96d9a8387879f_0804e75bba', tabindex='-1', value='')
                                .modal-footer
                                    input#mc-embedded-subscribe.button.btn-primary.m-0(type='submit', value=self.blocks.form.subscribe, name='subscribe')
                        link(href='https://cdn-images.mailchimp.com/embedcode/classic-10_7.css', rel='stylesheet', type='text/css')
                        script(src='https://s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js')
                        script.
                            (function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[1]='FNAME';ftypes[1]='text';fnames[0]='EMAIL';ftypes[0]='email';}(jQuery));var $mcj = jQuery.noConflict(true);

