append stylus
    :stylus
        header
            position relative
            background-color black
            height 73vh
            min-height 25rem
            width 100%
            overflow hidden

            video
                position absolute
                top 50%
                left 50%
                min-width 100%
                min-height 100%
                width auto
                height auto
                z-index 0
