active-nav(color)
    &.active
        border-bottom 4px solid color

        a
            color #7B7B7B

    a
        &:hover
            color color

            svg
                g
                    g
                        fill color


nav
    box-shadow 0px 0px 20px 0px rgba(0, 0, 0, 0.2)

    li
        a
            color #252525
            font-weight 100

        active-nav #252525

        &.product
            active-nav #FFC600

        &.movement
            active-nav #42C8C6

        &.research
            active-nav #F5762D

    .btn-link
        color #0680FC
